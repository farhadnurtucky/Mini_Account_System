@page
@model MiniAccountsSystem.Areas.Identity.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
